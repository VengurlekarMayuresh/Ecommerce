# Azure Environment Configuration Template
# Copy this to .env.azure and fill in your Azure values

# Node Environment
NODE_ENV=production
PORT=8080

# MongoDB Connection (Azure Cosmos DB or MongoDB Atlas)
MONGO_DBURL=your-mongodb-connection-string

# JWT Secret
SECRET_KEY=your-jwt-secret-key

# Azure Storage Account
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account-name
AZURE_STORAGE_ACCOUNT_KEY=your-storage-account-key

# Azure Application Insights
APPLICATIONINSIGHTS_CONNECTION_STRING=your-app-insights-connection-string

# Azure Key Vault (Optional)
KEY_VAULT_NAME=your-keyvault-name

# Cloudinary (Fallback or alternative)
CLOUDINARY_CLOUD_NAME=your-cloudinary-cloud-name
CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret

# PayPal
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox

# Client URL (Azure Static Web App URL)
CLIENT_URL=https://your-static-web-app.azurestaticapps.net

# Azure AD B2C (Optional - for advanced auth)
AZURE_AD_B2C_CLIENT_ID=your-b2c-client-id
AZURE_AD_B2C_CLIENT_SECRET=your-b2c-client-secret
AZURE_AD_B2C_TENANT_NAME=your-b2c-tenant-name
AZURE_AD_B2C_POLICY_NAME=your-b2c-policy-name

# Azure Service Bus (Optional - for messaging)
AZURE_SERVICE_BUS_CONNECTION_STRING=your-service-bus-connection-string
AZURE_SERVICE_BUS_QUEUE_NAME=order-notifications
